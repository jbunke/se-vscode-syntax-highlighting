{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DeltaScript",
	"patterns": [
		{ "include": "#strings" }, 
		{ "include": "#keywords" },
		{ "include": "#num_lits" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{ "include": "#misc_kw" }, 
				{ "include": "#base_types" }
			]
		},
		"misc_kw": {
			"match": "\\b(if|else|in|final|do|while|for|return|new)\\b", 
			"name": "keyword"
		}, 
		"num_lits": {
			"patterns": [
				{ "include": "#int_lit" }
			]
		}, 
		"int_lit":{ 
			"match": "[0-9]+", 
			"name": "constant.numeric"
		 }, 
		"base_types": {
			"match": "\\b(bool|color|float|image|int|string)\\b", 
			"name": "entity.name.type"
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.deltascript",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ds"
}
