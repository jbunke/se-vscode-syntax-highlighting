{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DeltaScript",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#base_types"
		}, 
		{
			"include": "#ext_types"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.deltascript",
				"match": "\\b(if|else|in|final|~|do|while|for|return|new)\\b"
			}]
		},
		"base_types": {
			"patterns": [{
				"name": "base_type.control.deltascript",
				"match": "\\b(string|image|color|int|float|bool)\\b"
			}]
		},
		"ext_types": {
			"patterns": [{
				"name": "ext_type.control.deltascript",
				"match": "\\b(layer|palette|project)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.deltascript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.deltascript",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ses"
}
